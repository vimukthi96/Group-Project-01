<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atheeshproperty.itaidapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/appicon_round"
        android:label="ITaid"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.atheeshproperty.itaidapp.SplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.atheeshproperty.itaidapp.MainActivity" android:screenOrientation="portrait"/>

        <activity android:name="com.atheeshproperty.itaidapp.programmingBtnActivity" android:screenOrientation="portrait" />
        <activity android:name="com.atheeshproperty.itaidapp.webDevelopmentBtnActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.atheeshproperty.itaidapp.statisticsBtnActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.atheeshproperty.itaidapp.mathematicsBtnActivity" android:screenOrientation="portrait"/>


    </application>

</manifest>